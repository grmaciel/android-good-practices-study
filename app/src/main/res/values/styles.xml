<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="colorAccent">#00c7a0</item>
        <item name="colorControlHighlight">#00695c</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#00695c</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:homeAsUpIndicator">@mipmap/ic_launcher</item>
    </style>
    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="LoginButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#4d1f1f</item>
    </style>

</resources>
