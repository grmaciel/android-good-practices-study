<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/promotionLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/promotionProductImg"
        android:transitionName="productTransition"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/product1" />

    <TextView
        android:id="@+id/promotionProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/promotionProductImg"
        android:textColor="@color/BoozePriceBar"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/promotionProductPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/promotionProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promotionProductName"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/promotionProductImg" />

</RelativeLayout>